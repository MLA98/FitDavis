<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">
        <img src="https://img.icons8.com/material-two-tone/48/000000/dumbbell.png" width="30" height="30" class="d-inline-block align-top" alt="">
      FitDavis
    </a>
    <div class="navbar-nav ml-auto">
        <% if(color === 'green'){%>
            <%}%>
                <span class="badge badge-success" style="font-size:small;">Not busy</span>
            <% if(color === 'yellow'){%>
                <span class="badge badge-warning">Not very busy</span>
            <%}%>
        
            <% if(color === 'red'){%>
                <span class="badge badge-danger">Very busy</span>
        <%}%>
    </div>
</nav>


<div class="container-xl">
  <form action="/login", method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" name="emailname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <!-- <a href="/workout" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Log in</a> -->
    <button type="submit" class="btn btn-primary btn-sm">Log in</button>
  </form>
</div>

</html>